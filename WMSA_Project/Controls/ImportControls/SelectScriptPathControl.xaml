<UserControl x:Class="WMSA_Project.Controls.ImportControls.SelectScriptPathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMSA_Project.Controls.ImportControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Header="Select Import Method">
            <StackPanel>
                <RadioButton x:Name="RdBtn_File" GroupName="ImportGroup" Content="Import Script from File" IsChecked="True" Checked="RdBtn_File_Checked"/>
                <RadioButton x:Name="RdBtn_DB" GroupName="ImportGroup" Content="Import Script from Database" Checked="RdBtn_DB_Checked"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
