<UserControl x:Class="WMSA_Project.Controls.ImportControls.ScriptByDBControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMSA_Project.Controls.ImportControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:DBQueryControl Grid.Row="0" Grid.Column="0" x:Name="DBQ_Ctrl"/>
        <ScrollViewer Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" x:Name="ScrlVwr_Output" VerticalScrollBarVisibility="Auto">
            <ListView  x:Name="Lst_Results" ItemsSource="{Binding ScriptList}">
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
