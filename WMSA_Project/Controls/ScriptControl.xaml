<UserControl x:Class="WMSA_Project.Controls.ScriptControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMSA_Project.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="330" d:DesignHeight="450" Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Vertical" x:Name="Stack_Attributes">
            <TextBlock Background="LightPink" x:Name="TextBlock_TestGroup">LM: 19.3.0.0-211</TextBlock>
            <TextBlock x:Name="TextBlock_ScriptName">AdminGenTask_12Oct19</TextBlock>
            <TextBlock x:Name="TextBlock_ScriptDate">10/12/2019</TextBlock>
        </StackPanel>
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="Stack_Transactions"/>
        </ScrollViewer>
    </Grid>
</UserControl>
