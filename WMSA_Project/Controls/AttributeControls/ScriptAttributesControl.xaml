<UserControl x:Class="WMSA_Project.Controls.AttributeControls.ScriptAttributesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMSA_Project.Controls.AttributeControls"
             mc:Ignorable="d" HorizontalAlignment="Stretch" >
    <UserControl.Resources>

    </UserControl.Resources>
    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
        <TextBox Grid.Column="0" x:Name="Txt_Bx" MinWidth="230"
                 HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="AliceBlue"
                   Style="{StaticResource textBlock}"
                 SelectionChanged="Txt_Bx_SelectionChanged"
                 />
        <Button   x:Name="Btn_Add" Content="Add" Click="Add_Button_Click" Visibility="Collapsed"/>
        <Button   x:Name="Btn_Select" Content="Select from DB" Click="Select_Button_Click" IsEnabled="False"/>
    </StackPanel>
</UserControl>