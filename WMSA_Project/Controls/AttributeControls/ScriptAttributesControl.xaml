<UserControl x:Class="WMSA_Project.Controls.AttributeControls.ScriptAttributesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMSA_Project.Controls.AttributeControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="500" Margin="0">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Right"  x:Name="Btn_Add" Content="Add" Click="Add_Button_Click"/>
        <Button DockPanel.Dock="Right" x:Name="Btn_Select" Content="Select" Click="Select_Button_Click"/>
        <TextBlock DockPanel.Dock="Right"  x:Name="Text_Block" HorizontalAlignment="Left" Margin="15,0,0,0.4" Text="{Binding SelectedValue}"/>
    </DockPanel>
</UserControl>
<!--Visibility="{Binding Path=ShowAddButton, Converter={StaticResource BoolToVis} }"-->