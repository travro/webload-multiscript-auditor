<UserControl x:Class="WMSA_Project.Controls.SelectFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMSA_Project.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid>
        <GroupBox HorizontalContentAlignment="Center"  Header="Select Webload Project File (.wlp) from PC">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="TxtBlk_FilePath" HorizontalAlignment="Stretch"/>
                <Button x:Name="Btn_OFD"  Content="..." Width="80" Click="Btn_OFD_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
