<Window x:Class="WMSA_Project.Windows.AttributeWindows.AttributeAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSA_Project.Windows.AttributeWindows"
        mc:Ignorable="d"
        Title="Add the Attribute" Height="120" Width="470.064" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.75*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox  Grid.Column="0" x:Name="Txt_Box" MaxLength="25" Background="AliceBlue"/>
        <Button  Grid.Column="1" x:Name="Btn_Close" Content="Close" Click="Btn_Close_Click" Margin="10,0,0,0"/>
    </Grid>
</Window>
