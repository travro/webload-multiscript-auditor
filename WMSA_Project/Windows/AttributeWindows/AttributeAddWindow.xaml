<Window x:Class="WMSA_Project.Windows.AttributeWindows.AttributeAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSA_Project.Windows.AttributeWindows"
        mc:Ignorable="d"
        Title="AttributeAddWindow" Height="80" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="Txt_Box" MaxLength="25" />
        <Button Grid.Column="1" x:Name="Btn_Close" Content="Close" Click="Btn_Close_Click" Margin="10,0,0,0"/>
    </Grid>
</Window>
